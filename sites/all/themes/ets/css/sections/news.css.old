#sidebar-left {
	border-color: #94c508;
  	border-style: solid;
  	border-width: 4px;
  	padding-top: 15px;
  	height: 450px;
}

#sidebar-left a {
	margin: 0 25px;
	padding: 4px 10px 5px 0;
}

#sidebar-left li.collapsed {
  background: #FFFFFF url(/sites/all/themes/ets/images/arrow-right-news-small.png) right center no-repeat; /* LTR */
  background-position: 135px 6px;
}

#sidebar-right {
	background: #94c508;
}

#newslist {
	margin: 15px 0 0 0;
}

#newslist p	{
	color: #333333;	
	font-size: 10.5pt;
}

#newslist a:link {
	color: #000000;
	text-decoration: none;
}

#newslist a:visited {
	color: #000000;
	text-decoration: none;
}

#newslist a:hover, #newslist a:visited:hover {
	color: #000000;
	text-decoration: underline;
}

h2, h3, h4, h5, p, address {
	margin: 0;
	padding: 10px 10px 0;
}

h1  {
	padding: 0 0 0 10px;
	margin-bottom: 0;
	text-transform: uppercase;
	font-size: 12pt;
	font-weight: bold;
}

#newslist p.newsdate {
	color: #8A9599;
	font-family: Arial, Helvetica, sans-serif;
	font-size: 8pt;
	padding-top: 0;
	margin-top: 0;
}

#newslist p.tags {
	color: #8A9599;
	font-family: Arial, Helvetica, sans-serif;
	font-size: 9pt;
}

#newslist p.readmore {
	clear: both;
	float: right;
	font-family: Arial, Helvetica, sans-serif;
	padding-bottom: 10px;
	padding-right: 15px;
	font-size: 9pt;
}

p.graphic {
	padding: 0;
}

hr {
	border: none;
	border-top: dotted 1px #000000;
	color: #FFFFFF;
	background-color: #FFFFFF;
	height: 1px; 
	clear: both;
}